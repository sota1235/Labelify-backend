{
  "name": "ts-boilerplate",
  "version": "0.0.1",
  "description": "Simple boilerplate for @sota1235",
  "main": "index.js",
  "engines": {
    "node": ">=v10.10.0"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "typescript": "^3.0.3"
  },
  "devDependencies": {
    "husky": "^1.0.0-rc.15",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "fix": "prettier --write ./src/**/*.ts",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint": "npm run fix && npm run tslint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "@sota1235",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  }
}
